Gem::Specification.new do |s|
  s.name        = 'destroyed_record_collector'
  s.version     = '1.0.0'
  s.date        = '2012-02-06'
  s.summary     = "Destroyed record collector"
  s.description = <<EOF
    Gem for collecting the deleted record for ActiveRecord to a new table named as (original_name_of_table)_backup in same database or 
     (original_name_of_table) in other database if other database configurations are provided in database.yml with ["#\{RUBY_ENV\}_backup"].
EOF
  s.authors     = ["Annu Yadav"]
  s.email       = 'life.annu.yadav@gmail.com'
  s.files       = ["lib/destroyed_record_collector.rb"]
  s.homepage    =
    'http://rubygems.org/gems/destroyed_record_collector'
end
